<%- include("navbar") %>
<div class="mt-10 min-w-fit lg:min-w-[60vw]">
  <div class="h-fit w-fit pb-4 box-border border-2 border-emerald-400 rounded shadow-c shadow-emerald-300 flex flex-col mx-auto items-center lg:min-w-[70%] backdrop-blur-sm">
    <h3 class="font-semibold text-lg lg:text-xl border rounded rounded-b-none w-full py-2 bg-emerald-200 text-center">
      Upload CSV File
    </h3>
    <div class="px-14 mt-6 lg:min-w-[80%]">
      <form action="upload" method="post" enctype="multipart/form-data" class="flex flex-col items-center gap-y-3 lg:min-w-[100%]">
        <input type="file" name="files" id="files" accept=".csv"  multiple required class="border border-slate-700 rounded lg:min-w-[100%]">
        <button type="submit" class="inline-flex items-center rounded-md bg-green-100 px-4 py-1 text-base font-medium text-green-900 ring-1 ring-inset ring-green-600/20 hover:bg-green-200">Upload</button>
      </form>
    </div>
  </div>
  <div class="min-w-[100%] min-h-fit flex flex-col items-center mt-4 px-4 py-3">
    <ul class="flex flex-col items-center gap-y-3 min-w-[80%]">
      <% for (file of filesList) { %>
        <a href="/api/v1/file/view/<%=file._id%>/1" class="flex items-center justify-center min-w-[60%] backdrop-blur-sm rounded-md border-2 border-indigo-300 text-center py-2 px-1 hover:backdrop-blur-lg hover:cursor-pointer
          hover:inline-flex hover:ring-2 ring-emerald-300 ring-inset">
          <li>
          <%= file.originalname %>
          </li>
        </a>
        <% } %>
    </ul>
  </div> 
</div>